@page "/radar"
@using Microsoft.AspNetCore.SignalR.Client
@using Tobot.Web.Hubs
@implements IAsyncDisposable
@inject NavigationManager Navigation

<PageTitle>Tobot - Radar</PageTitle>

<div class="radar-page">
    <div class="radar-header">
        <div>
            <div class="radar-title">Tobot Radar</div>
            <div class="radar-subtitle">Ultrasonic sweep map</div>
        </div>
        <div class="radar-status">
            <span class="status-pill @(_isConnected ? "ok" : "down")">@(_isConnected ? "Connected" : "Disconnected")</span>
            <span class="status-pill">Auto scan: @(_autoScanEnabled ? "On" : "Off")</span>
        </div>
    </div>

    <div class="radar-body">
        <div class="radar-display">
            <div class="radar-sweep"></div>
            <svg class="radar-grid" viewBox="0 0 200 200" aria-hidden="true">
                <!-- Forward-facing concentric arcs -->
                <path class="grid-arc" d="M 100 10 A 90 90 0 0 1 100 190" />
                <path class="grid-arc" d="M 100 40 A 60 60 0 0 1 100 160" />
                <path class="grid-arc" d="M 100 70 A 30 30 0 0 1 100 130" />
                <!-- Center line (0 degrees) -->
                <line class="grid-line" x1="100" y1="10" x2="100" y2="190" />
                <!-- Left edge (-90 degrees) -->
                <line class="grid-line" x1="10" y1="100" x2="100" y2="100" />
                <!-- Right edge (+90 degrees) -->
                <line class="grid-line" x1="190" y1="100" x2="100" y2="100" />
            </svg>
            <svg class="radar-blips" viewBox="0 0 200 200" role="img" aria-label="Radar detection">
                @if (HasDetection)
                {
                    <circle class="blip-pulse" cx="@DotX" cy="@DotY" r="8" />
                    <circle class="blip-core" cx="@DotX" cy="@DotY" r="3" />
                }
            </svg>
        </div>

        <div class="radar-readout">
            <div class="readout-row">
                <div class="label">Distance</div>
                <div class="value">@DistanceText</div>
            </div>
            <div class="readout-row">
                <div class="label">Pan angle</div>
                <div class="value">@PanAngleText</div>
            </div>
            <div class="readout-row">
                <div class="label">Direction</div>
                <div class="value">@DirectionText</div>
            </div>
            <div class="readout-row">
                <div class="label">Last update</div>
                <div class="value">@LastUpdateText</div>
            </div>

            <div class="radar-controls">
                <button class="action" @onclick="TriggerScan" disabled="@(!_isConnected)">Trigger sweep</button>
                <button class="action ghost" @onclick="ToggleAutoScan" disabled="@(!_isConnected)">Toggle auto</button>
            </div>

            <div class="readout-note">Range mapped to @MaxDistanceCmText</div>
            @if (!string.IsNullOrWhiteSpace(_errorMessage))
            {
                <div class="readout-error">@_errorMessage</div>
            }
        </div>
    </div>
</div>

@code {
    /// <summary>
    /// SignalR connection to the Tobot hub for radar updates.
    /// </summary>
    private HubConnection? _hubConnection;

    /// <summary>
    /// Cancellation source for the auto-scan loop.
    /// </summary>
    private CancellationTokenSource? _scanCts;

    /// <summary>
    /// Background task running the auto-scan loop.
    /// </summary>
    private Task? _scanTask;

    /// <summary>
    /// Last detected distance in centimeters.
    /// </summary>
    private double? _distanceCm;

    /// <summary>
    /// Last detected pan angle in degrees.
    /// </summary>
    private int? _panAngle;

    /// <summary>
    /// Last detected direction label.
    /// </summary>
    private string _direction = "Center";

    /// <summary>
    /// Timestamp of the last detection update (UTC).
    /// </summary>
    private DateTimeOffset? _lastUpdateUtc;

    /// <summary>
    /// Whether the hub connection is currently active.
    /// </summary>
    private bool _isConnected;

    /// <summary>
    /// Whether automatic scanning is enabled.
    /// </summary>
    private bool _autoScanEnabled = true;

    /// <summary>
    /// Error message to display when operations fail.
    /// </summary>
    private string? _errorMessage;

    /// <summary>
    /// Maximum radar range used to normalize the blip position.
    /// </summary>
    private const double MaxDistanceCm = 60.0;

    /// <summary>
    /// Degrees to increment between sweep measurements.
    /// </summary>
    private const int SweepIncrement = 5;

    /// <summary>
    /// Samples averaged per measurement.
    /// </summary>
    private const int SamplesPerReading = 5;

    /// <summary>
    /// Interval between automatic sweep triggers.
    /// </summary>
    private static readonly TimeSpan ScanInterval = TimeSpan.FromMilliseconds(1800);

    /// <summary>
    /// Whether there is a valid detection to display.
    /// </summary>
    private bool HasDetection => _distanceCm.HasValue && _panAngle.HasValue;

    /// <summary>
    /// Formatted distance readout.
    /// </summary>
    private string DistanceText => _distanceCm.HasValue ? $"{_distanceCm.Value:F1} cm" : "--";

    /// <summary>
    /// Formatted pan angle readout.
    /// </summary>
    private string PanAngleText => _panAngle.HasValue ? $"{_panAngle.Value} deg" : "--";

    /// <summary>
    /// Formatted direction readout.
    /// </summary>
    private string DirectionText => _direction;

    /// <summary>
    /// Formatted maximum distance label.
    /// </summary>
    private string MaxDistanceCmText => $"{MaxDistanceCm:F0} cm";

    /// <summary>
    /// Relative time since the last detection update.
    /// </summary>
    private string LastUpdateText
    {
        get
        {
            if (!_lastUpdateUtc.HasValue)
            {
                return "No detection yet";
            }

            var seconds = (DateTimeOffset.UtcNow - _lastUpdateUtc.Value).TotalSeconds;
            return seconds < 1 ? "Just now" : $"{seconds:F1}s ago";
        }
    }

    /// <summary>
    /// X coordinate for the detection blip in the radar view.
    /// </summary>
    private double DotX
    {
        get
        {
            if (!HasDetection)
            {
                return 100;
            }

            double distance = Math.Min(_distanceCm!.Value, MaxDistanceCm);
            double radius = distance / MaxDistanceCm * 90.0;
            double angleRad = _panAngle!.Value * Math.PI / 180.0;
            return 100 + radius * Math.Sin(angleRad);
        }
    }

    /// <summary>
    /// Y coordinate for the detection blip in the radar view.
    /// </summary>
    private double DotY
    {
        get
        {
            if (!HasDetection)
            {
                return 100;
            }

            double distance = Math.Min(_distanceCm!.Value, MaxDistanceCm);
            double radius = distance / MaxDistanceCm * 90.0;
            double angleRad = _panAngle!.Value * Math.PI / 180.0;
            return 100 - radius * Math.Cos(angleRad);
        }
    }

    /// <summary>
    /// Initializes the hub connection and auto-scan loop.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        _hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/tobothub"))
            .WithAutomaticReconnect()
            .Build();

        _hubConnection.On<double, int, string>(TobotHubEvents.ObjectDetectionCompleted, (distance, panAngle, direction) =>
        {
            _distanceCm = distance;
            _panAngle = panAngle;
            _direction = direction;
            _lastUpdateUtc = DateTimeOffset.UtcNow;
            _errorMessage = null;
            InvokeAsync(StateHasChanged);
        });

        try
        {
            await _hubConnection.StartAsync().ConfigureAwait(false);
            _isConnected = true;
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
            _isConnected = false;
            return;
        }

        if (_autoScanEnabled)
        {
            StartScanLoop();
        }
    }

    /// <summary>
    /// Starts the periodic scan loop.
    /// </summary>
    private void StartScanLoop()
    {
        StopScanLoop();
        _scanCts = new CancellationTokenSource();
        _scanTask = RunScanLoopAsync(_scanCts.Token);
    }

    /// <summary>
    /// Stops the periodic scan loop.
    /// </summary>
    private void StopScanLoop()
    {
        if (_scanCts is null)
        {
            return;
        }

        _scanCts.Cancel();
        _scanCts.Dispose();
        _scanCts = null;
        _scanTask = null;
    }

    /// <summary>
    /// Loop that triggers radar scans on an interval.
    /// </summary>
    private async Task RunScanLoopAsync(CancellationToken ct)
    {
        using var timer = new PeriodicTimer(ScanInterval);
        while (!ct.IsCancellationRequested && await timer.WaitForNextTickAsync(ct).ConfigureAwait(false))
        {
            await TriggerScan().ConfigureAwait(false);
        }
    }

    /// <summary>
    /// Requests a sweep measurement from the hub.
    /// </summary>
    private async Task TriggerScan()
    {
        if (_hubConnection is null || _hubConnection.State != HubConnectionState.Connected)
        {
            return;
        }

        try
        {
            await _hubConnection.InvokeAsync(nameof(TobotHub.FindClosestObject), SamplesPerReading, SweepIncrement).ConfigureAwait(false);
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
    }

    /// <summary>
    /// Toggles automatic scanning on or off.
    /// </summary>
    private async Task ToggleAutoScan()
    {
        _autoScanEnabled = !_autoScanEnabled;
        if (_autoScanEnabled)
        {
            StartScanLoop();
            await TriggerScan().ConfigureAwait(false);
        }
        else
        {
            StopScanLoop();
        }
    }

    /// <summary>
    /// Disposes hub connections and background scan tasks.
    /// </summary>
    public async ValueTask DisposeAsync()
    {
        StopScanLoop();

        if (_hubConnection is not null)
        {
            await _hubConnection.DisposeAsync().ConfigureAwait(false);
        }
    }
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600;700&display=swap');

    :root {
        --radar-bg: #0a0f0d;
        --radar-panel: #0f1816;
        --radar-accent: #5bffb0;
        --radar-accent-soft: rgba(91, 255, 176, 0.35);
        --radar-grid: rgba(91, 255, 176, 0.25);
        --radar-glow: rgba(91, 255, 176, 0.55);
        --radar-danger: #ff5f57;
        --radar-text: #d6fff0;
        --radar-muted: rgba(214, 255, 240, 0.65);
    }

    .radar-page {
        min-height: 100vh;
        background:
            radial-gradient(circle at 20% 20%, rgba(91, 255, 176, 0.12), transparent 45%),
            radial-gradient(circle at 80% 0%, rgba(91, 255, 176, 0.08), transparent 35%),
            linear-gradient(180deg, #050807, #0a0f0d 55%, #050807 100%);
        color: var(--radar-text);
        padding: 32px;
        font-family: "Orbitron", "Eurostile", "Bank Gothic", sans-serif;
    }

    .radar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 16px;
        margin-bottom: 28px;
    }

    .radar-title {
        font-size: clamp(26px, 4vw, 38px);
        font-weight: 700;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .radar-subtitle {
        color: var(--radar-muted);
        margin-top: 4px;
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    .radar-status {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .status-pill {
        padding: 8px 12px;
        border: 1px solid rgba(91, 255, 176, 0.35);
        border-radius: 999px;
        background: rgba(10, 20, 17, 0.7);
        font-size: 12px;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .status-pill.ok {
        box-shadow: 0 0 12px rgba(91, 255, 176, 0.4);
    }

    .status-pill.down {
        border-color: rgba(255, 95, 87, 0.6);
        color: #ffd7d5;
    }

    .radar-body {
        display: grid;
        grid-template-columns: minmax(0, 1.2fr) minmax(0, 0.8fr);
        gap: 28px;
        align-items: center;
    }

    .radar-display {
        position: relative;
        width: min(72vw, 520px);
        aspect-ratio: 1;
        border-radius: 50%;
        background: radial-gradient(circle at center, rgba(6, 16, 12, 0.9), rgba(5, 8, 7, 0.95) 70%);
        border: 1px solid rgba(91, 255, 176, 0.3);
        box-shadow:
            0 0 40px rgba(0, 0, 0, 0.6),
            inset 0 0 60px rgba(91, 255, 176, 0.2);
        overflow: hidden;
        clip-path: polygon(0 0, 50% 100%, 100% 0);
    }

    .radar-sweep {
        position: absolute;
        inset: -5%;
        border-radius: 50%;
        background: conic-gradient(from -90deg, rgba(91, 255, 176, 0.35), rgba(91, 255, 176, 0.02) 35deg, transparent 60deg);
        animation: radar-spin 4s linear infinite;
        mix-blend-mode: screen;
        clip-path: polygon(0 0, 50% 100%, 100% 0);
    }

    .radar-grid,
    .radar-blips {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
    }

    .grid-ring,
    .grid-arc,
    .grid-line {
        fill: none;
        stroke: var(--radar-grid);
        stroke-width: 1;
    }

    .grid-line {
        stroke-dasharray: 4 6;
    }

    .blip-core {
        fill: var(--radar-accent);
        filter: drop-shadow(0 0 6px var(--radar-glow));
    }

    .blip-pulse {
        fill: none;
        stroke: var(--radar-accent);
        stroke-width: 1.5;
        animation: blip-pulse 1.6s ease-out infinite;
    }

    .radar-readout {
        padding: 24px;
        border-radius: 18px;
        background: var(--radar-panel);
        border: 1px solid rgba(91, 255, 176, 0.2);
        box-shadow: 0 18px 40px rgba(0, 0, 0, 0.45);
    }

    .readout-row {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        padding: 10px 0;
        border-bottom: 1px solid rgba(91, 255, 176, 0.1);
    }

    .readout-row:last-of-type {
        border-bottom: none;
    }

    .readout-row .label {
        color: var(--radar-muted);
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .readout-row .value {
        font-size: 18px;
        font-weight: 600;
    }

    .radar-controls {
        display: flex;
        gap: 12px;
        margin-top: 20px;
    }

    .action {
        flex: 1;
        padding: 12px 14px;
        border-radius: 999px;
        border: none;
        background: var(--radar-accent);
        color: #05120c;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .action:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        transform: none;
    }

    .action:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(91, 255, 176, 0.35);
    }

    .action.ghost {
        background: transparent;
        border: 1px solid rgba(91, 255, 176, 0.5);
        color: var(--radar-text);
    }

    .readout-note {
        margin-top: 14px;
        color: var(--radar-muted);
        font-size: 12px;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .readout-error {
        margin-top: 10px;
        color: #ffd7d5;
        font-size: 12px;
    }

    @@keyframes radar-spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    @@keyframes blip-pulse {
        0% {
            opacity: 0.9;
            r: 6;
        }
        70% {
            opacity: 0.25;
            r: 16;
        }
        100% {
            opacity: 0;
            r: 22;
        }
    }

    @@media (max-width: 900px) {
        .radar-body {
            grid-template-columns: 1fr;
        }

        .radar-display {
            width: min(85vw, 440px);
            margin: 0 auto;
        }
    }
</style>
